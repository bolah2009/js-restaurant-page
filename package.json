{
  "name": "js-restaurant-page",
  "version": "1.0.0",
  "description": "Dynamically rendering a simple restaurant homepage using JavaScript DOM manipulation",
  "main": "./dist",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "format": "npx prettier  --write '**/*.{html,js,json,md.json,yaml,yml}'",
    "format:check": "npx prettier  --check '**/*.{html,js,json,md.json,yaml,yml}'",
    "lint": "npx eslint '**/*.js' --fix && npx stylelint '**/*.css' --fix",
    "lint:check": "npx eslint '**/*.js' && npx stylelint '**/*.css'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolah2009/restaurant_page.git"
  },
  "keywords": [
    "JavaScript",
    "DOM",
    "Vite",
    "ES6",
    "Modules"
  ],
  "author": "Bola Ahmed Buari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bolah2009/restaurant_page/issues"
  },
  "homepage": "https://github.com/bolah2009/restaurant_page#readme",
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "1.19.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.0.8"
  }
}
